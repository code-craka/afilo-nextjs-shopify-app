# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# SHOPIFY CONFIGURATION (Required)
# ===========================================

# Your Shopify store domain (without https://)
# Example: your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=fzjdsw-ma.myshopify.com

# Shopify Storefront API Access Token (SERVER-SIDE ONLY)
# This is a secret and should NOT be prefixed with NEXT_PUBLIC_
# Get this from: Shopify Admin -> Settings -> Apps and sales channels -> Develop apps -> Create an app
# Grant the "unauthenticated_read_product_listings" and "unauthenticated_read_checkouts" access scopes.
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# ===========================================
# CUSTOMER ACCOUNTS (Optional)
# ===========================================

# Shopify Customer Account Client ID
# Required for customer authentication features
NEXT_PUBLIC_CUSTOMER_ACCOUNT_CLIENT_ID=your_customer_account_client_id

# ===========================================
# DEPLOYMENT (Optional)
# ===========================================

# Vercel URL (automatically set in Vercel)
NEXT_PUBLIC_VERCEL_URL=your_preview_url

# ===========================================
# DEVELOPMENT (Optional)
# ===========================================

# Enable bundle analysis
ANALYZE=false

# Node environment (automatically set)
NODE_ENV=development

# ===========================================
# ANALYTICS (Optional)
# ===========================================

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

