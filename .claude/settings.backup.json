      "Edit(*.ts)",
      "Edit(*.tsx)",
      "Edit(*.js)",
      "Edit(*.jsx)",
      "Edit(app/**/*)",
      "Edit(components/**/*)",
      "Edit(lib/**/*)",
      "Write(src/**/*)",
      "Write(app/**/*)",
      "Write(components/**/*)",
      "Write(lib/**/*)",
      "Write(docs/**/*)",
      "Write(~/.claude/**/*)",
      "Bash(rm:*)",
      "mcp__memory__read_graph",
      "Bash(pnpm add:*)",
      "mcp__memory__add_observations",
