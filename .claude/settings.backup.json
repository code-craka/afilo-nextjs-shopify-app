        ]
      }
    ],
    "PostToolUse:Write": [
      {
        "matcher": "*.json",
        "hooks": [
          {
            "type": "command",
            "command": "prettier --write --loglevel silent \"$CLAUDE_FILE_PATH\" || true",
            "timeout": 3000
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
